<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DefaultController"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" maxWidth="300.0">
            <Label text="Players ranking" alignment="CENTER" style="-fx-font-size: 36"/>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <ListView fx:id="playersList"/>

            <HBox alignment="CENTER">
                <HBox.margin>
                    <Insets bottom="10.0"/>
                </HBox.margin>
                <Button text="Log out" onAction="#handleLogOut"/>
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
                <Button text="Play a game" onAction="#handlePlay"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
